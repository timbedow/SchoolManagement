@model HomeViewModel

<h2>@Model.Title</h2>

@foreach (var student in Model.Students)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@student.ImageUrl" alt="@student.FirstName @student.LastName">
            <div class="caption">
                <h3 class="pull-right">@student.DateOfBirth.ToShortDateString()</h3>
                <h3>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@student.Id">@student.FirstName @student.LastName</a>
                </h3>
            </div>        
        </div>
    </div>
}
