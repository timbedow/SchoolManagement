@model SchoolManagement.Web.ViewModels.HomeViewModel

<h2>@Model.Title</h2>

@foreach (var student in Model.Students)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@student.ImageUrl" alt="@student.FirstName @student.LastName">
            <div class="caption">
                <h3 class="pull-right">@student.DateOfBirth.ToShortDateString()</h3>
                <h3>
                    @student.FirstName @student.LastName
                </h3>
            </div>        
        </div>
    </div>
}
